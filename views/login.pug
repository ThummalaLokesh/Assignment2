block content
  .container
    h1 #{buttonText} Form

    form(method="POST")
      .form-group
        label Username
        input.form-control(name="username" type="text")
      .form-group
        label Password
        input.form-control(name="password" type="password")
      a.btn.btn-github(href="/auth/github")
        i.fa.fa-github
        span.ml-2 Login With Github
      a.btn.btn-secondary(href="/auth/google")
        i.fa.fa-google
        span.ml-2 Login With Google
      button.btn.btn-primary(type="submit")= buttonText